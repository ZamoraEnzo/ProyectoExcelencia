@model MiProyecto.Models.Contacto

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4>Modificar información de contacto</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Actualizar","Contacto")" method="post">
                    <input type="hidden" class="form-control" name="IdContacto" value="@Html.DisplayFor(m => m.IdContacto)" />
                    <div class="form-group">
                        <label>Nombres</label>
                        <input type="text" class="form-control" name="Nombres" value="@Html.DisplayFor(m => m.Nombres)" />
                    </div>
                    <div class="form-group">
                        <label>Apellidos</label>
                        <input type="text" class="form-control" name="Apellidos" value="@Html.DisplayFor(m => m.Apellidos)" />
                    </div>
                    <div class="form-group">
                        <label>Teléfono</label>
                        <input type="text" class="form-control" name="Telefono" value="@Html.DisplayFor(m => m.Telefono)" />
                    </div>
                    <div class="form-group">
                        <label>Correo electrónico</label>
                        <input type="text" class="form-control" name="Correo" value="@Html.DisplayFor(m => m.Correo)" />
                    </div>
                    <button type="submit" class="btn btn-success">Actualizar</button>
                    <a class="btn btn-warning" href="@Url.Action("Inicio","Contacto")">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>
