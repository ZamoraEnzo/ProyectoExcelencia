@model MiProyecto.Models.Contacto

@{
    ViewBag.Title = "AGREGAR NUEVO CONTACTO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h4>Agregar nuevo contacto</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Crear","Contacto")" method="post">
                    <div class="form-group">
                        <label>Nombres</label>
                        <input type="text" class="form-control" name="Nombres" />
                    </div>
                    <div class="form-group">
                        <label>Apellidos</label>
                        <input type="text" class="form-control" name="Apellidos" />
                    </div>
                    <div class="form-group">
                        <label>Teléfono</label>
                        <input type="text" class="form-control" name="Telefono" />
                    </div>
                    <div class="form-group">
                        <label>Correo electrónico</label>
                        <input type="text" class="form-control" name="Correo" />
                    </div>
                    <button type="submit" class="btn btn-success">Registrar</button>
                    <a class="btn btn-warning" href="@Url.Action("Inicio","Contacto")">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>
